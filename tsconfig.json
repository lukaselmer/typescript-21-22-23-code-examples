{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "target": "ES6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": false,
    "types": []
  },
  "compileOnSave": true,
  "buildOnSave": true
}
